@{
    Layout = null;
}
    <h2>Trip</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="Name" class = "control-label col-md-2"> Name </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Name" id="Name"  class="form-control"/>
                    <div id="validation_for_Name"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Time" class = "control-label col-md-2"> Time </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Time" id="Time"  class="form-control"/>
                    <div id="validation_for_Time"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="Time" class="control-label col-md-2"> EndTime </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.EndTime" id="Time" class="form-control" />
                    <div id="validation_for_EndTime"></div>
                </div>
            </div>
                
            <div class="form-group">
                <label for="LocationId" class = "control-label col-md-2"> Location </label>
                <div class="col-md-10">
                    <select ng-model="data.LocationId" id="LocationId"  class="form-control"
                            ng-options="option.Id as option.Name for option in LocationId_options">
                        <option value="">-- choose Location --</option>
                    </select>
                    <div id="validation_for_LocationId"></div>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
    
    <div>
        <a ui-sref="Home.tripList" class="loginLink">Back to List</a>
    </div>
