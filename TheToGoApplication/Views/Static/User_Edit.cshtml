@{
    Layout = null;
}

<div class="container createUserContainer">
    <div class="row">
                <div class="col-md-12 createUserClass">
                    <h2 class="text-center" ng-hide="UserSelect.isLoggedIn">Create User</h2>
           <h2 ng-show="UserSelect.isLoggedIn">User</h2>
                <label for="Username" class = "control-label eachlabel"> Username </label>
                    <input type="text" ng-model="data.Username" id="Username"  class="form-control"/>
                    <div id="validation_for_Username"></div>
                <label for="Password" class = "control-label eachlabel"> Password </label>
                    <input type="text" ng-model="data.Password" id="Password"  class="form-control"/>
                    <div id="validation_for_Password"></div>
                <label for="Name" class = "control-label eachlabel"> Name </label>
                    <input type="text" ng-model="data.Name" id="Name"  class="form-control"/>
                    <div id="validation_for_Name"></div>
                <label for="Company" class = "control-label eachlabel"> Company </label>
                    <input type="text" ng-model="data.Company" id="Company"  class="form-control"/>
                    <div id="validation_for_Company"></div>
                <label for="Email" class = "control-label eachlabel"> Email </label>
                    <input type="email" ng-model="data.Email" id="Email"  class="form-control"/>
                    <div id="validation_for_Email"></div>
                <label for="PhoneNumber" class = "control-label eachlabel"> PhoneNumber </label>
                    <input type="text" ng-model="data.PhoneNumber" id="PhoneNumber"  class="form-control"/>
                    <div id="validation_for_PhoneNumber"></div>
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
        </div>
    
    </div>
    </div>
